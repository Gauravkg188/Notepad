<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAA8A8"
    tools:context=".NotesActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relative_upper">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_baseline_add_a_photo_24"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="3dp"
            android:id="@+id/image_click"/>
        <TextView
            android:id="@+id/text_title"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Title"
            android:layout_toStartOf="@+id/image_click"
            android:textColor="@android:color/black"
            android:textSize="18dp"
            android:textStyle="bold" />


    </RelativeLayout>





    <EditText
        android:id="@+id/edit_Title"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/relative_upper"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="30dp"
        android:background="#FFFFFF"
        android:maxLength="20"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/text_content"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/edit_Title"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="2dp"
        android:text="Content"
        android:textColor="@android:color/black"
        android:textSize="18dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edit_content"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/text_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="2dp"
        android:textSize="18dp"
        android:textStyle="normal"
        android:textColor="@android:color/black"
        android:layout_marginRight="30dp"
        android:background="#FFFFFF" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relative_layout"
        android:layout_below="@+id/edit_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/relative_below"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/text_priority"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="Priority"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_date"
                android:layout_width="200dp"
                android:layout_height="25dp"
               android:layout_alignParentEnd="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="Date"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                android:textStyle="bold" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relative_below">

            <EditText
                android:id="@+id/edit_priority"
                android:layout_width="130dp"
                android:layout_height="30dp"

                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:background="#FFFFFF"
                android:inputType="number"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/edit_date"
                android:layout_width="200dp"
                android:layout_height="30dp"

                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:layout_alignParentEnd="true"

                android:background="#FFFFFF"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black"
                android:textSize="20dp" />

        </RelativeLayout>


    </RelativeLayout>



    <TextView
        android:id="@+id/text_password"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/relative_layout"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="6dp"
        android:text="Password"
        android:textColor="@android:color/black"
        android:textSize="17dp"
        android:textStyle="bold" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relative_lowest"
        android:layout_below="@+id/text_password">


        <ImageView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_baseline_close_24"
            android:layout_alignParentEnd="true"
            android:id="@+id/image_close"/>


        <EditText
            android:id="@+id/edit_password"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:background="#FFFFFF"
            android:layout_toStartOf="@+id/image_close"

            android:inputType="number"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:textSize="20dp" />



    </RelativeLayout>









    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/relative_lowest"
        android:id="@+id/relative"
        >



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/imageView"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            />



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative"
        android:gravity="center"
        android:layout_marginTop="3dp"
        >

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Update"
            android:textSize="12sp"
            android:id="@+id/button_submit"/>


    </RelativeLayout>

</RelativeLayout>